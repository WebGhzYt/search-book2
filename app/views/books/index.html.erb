<%#= form_tag books_path, :method => :get do %>

<!--   Book -->  <%#= radio_button_tag 'search', 'book',true %>
  <!-- All --><%#= radio_button_tag 'search', 'all'%>
    <%#= submit_tag "Search", :name => nil %>
<%# end %>
<p id="notice"><%= notice %></p>
<%= form_tag books_path, :method => :get do %>
  <p>Search Book
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div id="facets">
  <h3>Published</h3>
  <ul>
    <% for row in @search.facet(:publish_month).rows %>
        <div class="results">
             <% @search.each_hit_with_result do |hit, book| -%>
             <div class="result">
              
                <h2><%#= book.id %><%#= book.title %>
                <%= hit.stored(:title) %> <%#= hit.score %></h2>
                </h2>
                
              </div>
          <% end -%>
        </div>      
    <% end %>
  </ul>
</div>


<%= form_tag books_path, :method => :get do %>
  <p>Search In Tag and Book
    <%= text_field_tag :search_all, params[:search_all] %>
    <%= submit_tag "Search All", :name => nil %>
  </p>
<% end %>


<div id="facets">
  <h3>Search All</h3>
  <ul>
    <% for row in @search_all.facet(:publish_month).rows %>
        <div class="results">
             <% @search_all.each_hit_with_result do |hit, book_all| -%>
             <div class="result">
              <li>
                <h2><%#= book.id %><%#= book.title %>
                <%= hit.stored(:title) %> 
                <%= hit.stored(:name) %> 
                <%= hit.score %></h2>
                </h2>
              </li>    
              </div>
          <% end -%>
        </div>      
    <% end %>
  </ul>
</div>












